#!/usr/bin/env bash

install() {
  version=$2
  install_dir=$3

  build_dir=$(mktemp -d)
  cd $build_dir

  curl -fSL -JO https://ftp.wayne.edu/gnu/nano/nano-${version}.tar.gz
  tar -xf nano*.gz
  rm -rf nano*.gz
  cd nano*
  ./configure --prefix=$install_dir --enable-utf8
  make && make install || exit 1
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
